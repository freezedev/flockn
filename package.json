{
  "name": "flockn",
  "version": "0.1.0",
  "description": "Micro game engine",
  "source": "src/index.js",
  "main": "dist/flockn.js",
  "exports": "dist/flockn.modern.js",
  "module": "dist/flockn.module.js",
  "size-limit": [
    {
      "path": "dist/flockn.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/flockn.modern.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/flockn.module.js",
      "limit": "10 KB"
    }
  ],
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "microbundle --external none",
    "dev": "microbundle watch",
    "lint": "eslint .",
    "format": "prettier --write . && eslint . --fix",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test jest",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freezedev/flockn.git"
  },
  "keywords": [
    "game",
    "engine",
    "micro",
    "small",
    "lightweight"
  ],
  "author": "Johannes Stein",
  "license": "(Unlicense OR MIT)",
  "bugs": {
    "url": "https://github.com/freezedev/flockn/issues"
  },
  "homepage": "https://github.com/freezedev/flockn",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@size-limit/preset-small-lib": "^4.9.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "size-limit": "^4.9.1",
    "webpack": "5.11.0",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "eventmap": "^2.1.0",
    "gamebox": "^0.2.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --"
    ]
  },
  "jest": {
    "collectCoverage": true
  }
}
